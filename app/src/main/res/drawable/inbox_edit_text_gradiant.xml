<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape
            android:shape="rectangle">
            <corners android:radius="@dimen/_25sdp"/>
            <gradient
                android:angle="90"
                android:endColor="#4865FF"
                android:startColor="#F048FF" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <corners android:radius="@dimen/_25sdp" />
        </shape>
    </item>
</layer-list>