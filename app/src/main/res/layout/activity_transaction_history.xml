<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navi_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_15sdp"
            android:src="@drawable/icon_left_back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction History"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/sfuitext_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:minHeight="@dimen/_33sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/constraintHeader"
        android:background="@drawable/tour_option_spinner_stock_bg"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/selectDate"
            style="@style/txt10SemiBoldWhite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/icon_event_calender"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:text="All"
            android:paddingHorizontal="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_goneMarginEnd="0dp"/>

        <ImageView
            android:id="@+id/ivDropDown"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:rotation="360"
            android:src="@drawable/icon_left_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/select_spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal"
        android:background="@drawable/tour_option_spinner_stock_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_time_layout">

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_event_calender"
            android:layout_marginHorizontal="@dimen/_5sdp"
            />

        <Spinner
            android:id="@+id/spinnerOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ivAmountView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_spinner_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="2"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/venue_bg"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:corner_radius="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ivTopSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Sales"
                android:textColor="@color/gray"
                style="@style/txt14Regular"/>

            <TextView
                android:id="@+id/ivTopSalesAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txt18Bold" />

        </com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

        <com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/venue_bg"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            app:corner_radius="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ivTotalProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Profit"
                android:textColor="@color/gray"
                style="@style/txt14Regular"/>

            <TextView
                android:id="@+id/ivTotalProfitAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4CAF50"
                style="@style/txt18Bold" />

        </com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        style="@style/MyWalletTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"

        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/venue_bg_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAmountView"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="@dimen/_3sdp"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/venue_text" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />




</androidx.constraintlayout.widget.ConstraintLayout>