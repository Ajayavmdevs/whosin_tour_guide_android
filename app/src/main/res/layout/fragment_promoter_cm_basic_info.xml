<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.fragment.PromoterCmApply.PromoterCmBasicInfoFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp">


            <com.whosin.app.ui.controller.CustomFromTextField
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="visible"
                app:formHintText="Enter your email"
                app:formTitle="Email *"
                app:isHideTitle="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showArrow="false" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_email">

                <TextView
                    android:id="@+id/tv_phone_title"
                    style="@style/txt11SemiBoldWhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Mobile Number *"
                    android:textStyle=""
                    android:layout_marginStart="@dimen/_9sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/inputContainerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    app:layout_constraintDimensionRatio="h,381:49"
                    app:layout_constraintTop_toBottomOf="@+id/tv_phone_title">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/countryCodePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_edittext_background"
                        android:paddingVertical="@dimen/_3sdp"
                        android:touchscreenBlocksFocus="false"
                        app:ccpDialog_background="@color/black"
                        app:ccpDialog_textColor="@color/white"
                        app:ccp_contentColor="@color/white"
                        app:ccp_defaultNameCode="AE"
                        app:ccp_showArrow="false"
                        app:ccp_showNameCode="false"
                        app:ccp_textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etPhone"
                        style="@style/txt12Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/form_edittext_background"
                        android:cursorVisible="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:hint="Enter your mobile Number"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_hint"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/editPhone"
                        app:layout_constraintStart_toEndOf="@id/countryCode"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_mobile_number">

                <TextView
                    android:id="@+id/tv_nationality_title"
                    style="@style/txt11SemiBoldWhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Nationality *"
                    android:textStyle=""
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/_9sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/inputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/form_edittext_background"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_4sdp"
                    app:layout_constraintDimensionRatio="h,381:49"
                    app:layout_constraintTop_toBottomOf="@id/tv_nationality_title">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ivDropDown"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/nationalityTv"
                            style="@style/txt12Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:paddingVertical="@dimen/_6sdp"
                            android:text="Select Nationality"
                            android:textColor="#7B7B7B"
                            android:visibility="gone"
                            android:hint="Select nationality"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/countryCode"
                            style="@style/CountryPickerStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center|end"
                            android:visibility="invisible"
                            app:ccpDialog_background="@color/black"
                            app:ccpDialog_showPhoneCode="false"
                            app:ccp_showArrow="false"
                            app:ccp_showFullName="true"
                            app:ccp_showNameCode="false"
                            app:ccp_showPhoneCode="false"
                            app:ccp_textGravity="LEFT"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/ivDropDown"
                        android:layout_width="@dimen/_19sdp"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:rotation="90"
                        android:src="@drawable/icon_left_btn"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/selectGenderAgeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:formHintText="Select gender"
                app:formTitle="Gender *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_nationality">

                <com.whosin.app.ui.controller.CustomFromTextField
                    android:id="@+id/layout_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:formHintText="Select gender"
                    app:formTitle="Gender *"
                    app:isHideTitle="false"
                    app:showArrow="true" />

                <com.whosin.app.ui.controller.CustomFromTextField
                    android:id="@+id/layout_dob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:formHintText="Select DOB"
                    app:formTitle="Date of birth *"
                    app:isHideTitle="false"
                    app:showArrow="true" />

            </LinearLayout>

            <com.whosin.app.ui.controller.CustomFromTextField
                android:id="@+id/layout_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:formHintText="Enter your location"
                app:formTitle="Location"
                app:isHideTitle="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selectGenderAgeLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>