<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/profileLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageProfile"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_46sdp"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
                android:id="@+id/vipImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_minus10sdp"
                android:background="@color/purpul_bg"
                app:corner_radius="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageProfile">

                <TextView
                    android:id="@+id/promoterText"
                    style="@style/txt8Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_1sdp"
                    android:text="Promoter" />

            </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                style="@style/txt12Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tvBio"
                style="@style/txt10Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Added a new event"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTime"
            style="@style/txt10Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone"
            android:text="" />

    </LinearLayout>


    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileLinear">

        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
            android:id="@+id/eventLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/share_doc_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:top_left_corner_radius="@dimen/_8sdp"
            app:top_right_corner_radius="@dimen/_8sdp">

            <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="@dimen/_7sdp"
                app:corner_radius="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:scaleType="center"/>
            </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/_7sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleText"
                    style="@style/txt12SemiBoldWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/subTitleText"
                    style="@style/txt10Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />

            </LinearLayout>

            <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
                android:id="@+id/interestConstraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green_medium"
                android:layout_gravity="end"
                app:bottom_left_corner_radius="@dimen/_5sdp">

                <TextView
                    style="@style/txt10SemiBoldWhite"
                    android:id="@+id/interestedTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_1sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="interested"/>


            </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>


            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="@dimen/_7sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:visibility="gone"
                android:src="@drawable/edit_icon" />
        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/features_bg"
            app:bottom_left_corner_radius="@dimen/_8sdp"
            app:bottom_right_corner_radius="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventLinear">

            <LinearLayout
                android:id="@+id/offerLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/infoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_event_calender" />

                        <TextView
                            android:id="@+id/txtFromDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white_70"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_event_time" />

                        <TextView
                            android:id="@+id/txtOfferTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white_70"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

<!--                    <LinearLayout-->
<!--                        android:id="@+id/linearSpot"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="@dimen/_5sdp"-->
<!--                        android:visibility="gone"-->
<!--                        >-->

<!--                        <ImageView-->
<!--                            android:layout_width="@dimen/_13sdp"-->
<!--                            android:layout_height="@dimen/_13sdp"-->
<!--                            android:src="@drawable/add_user_pink" />-->

<!--                        <TextView-->
<!--                            android:id="@+id/txtTillDate"-->
<!--                            style="@style/txt9RegularWhite70"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginStart="@dimen/_5sdp"-->
<!--                            android:fontFamily="@font/montserrat_regular"-->
<!--                            android:textColor="@color/white_70"-->
<!--                            android:textSize="@dimen/_9sdp" />-->

<!--                    </LinearLayout>-->

                    <TextView
                        android:id="@+id/offerDescription"
                        style="@style/txt9RegularWhite70"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:minLines="3"
                        android:visibility="visible"/>

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/imgCardView"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="@dimen/_17sdp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgOffer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/buttonLinear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offerLinear">


                <LinearLayout
                    android:id="@+id/outFavButtonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">



                    <com.whosin.app.ui.controller.IconButton
                        android:id="@+id/eventImIn"
                        style="@style/txt11SemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_weight="1"
                        app:buttonBgColor="@color/im_in"
                        app:buttonTintColor="@color/white"
                        app:buttonTitle="I'M IN!" />

                    <com.whosin.app.ui.controller.IconButton
                        android:id="@+id/btnImOut"
                        style="@style/txt11Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_weight="1"
                        app:buttonBgColor="@color/out_color"
                        app:buttonTintColor="@color/white"
                        app:buttonTitle="Iâ€™m OUT" />


                    <com.whosin.app.ui.controller.IconButton
                        android:id="@+id/btnWishList"
                        style="@style/txt11SemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        android:layout_weight="0.93"
                        android:visibility="visible"
                        app:buttonBgColor="@color/add_to_wishlist"
                        app:buttonIcon="@drawable/icon_my_list"
                        app:buttonTintColor="@color/white"
                        app:buttonTitle="add my List" />


                </LinearLayout>

                <TextView
                    android:id="@+id/txtEventStatus"
                    style="@style/txt12Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Cancelled"
                    android:textColor="@color/buy_button"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>