<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/time_slot_unselected_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:paddingVertical="@dimen/_5sdp">

    <!-- Wrapper layout for TextViews -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_available_time_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfuitext_regular"
            android:textColor="@color/ticket_selected_colour"
            android:layout_marginStart="@dimen/_6sdp"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/btnSelectTimeSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:buttonTint="@color/white_70"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="" />

</LinearLayout>
