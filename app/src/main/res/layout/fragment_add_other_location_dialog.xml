<?xml version="1.0" encoding="utf-8"?>
<com.whosin.business.comman.ui.roundcornerlayout.RoundCornerConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:corner_radius="@dimen/_10sdp"
    android:background="@color/bucket_dialog"
    android:layout_marginHorizontal="@dimen/_15sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activites.travelDeskTicket.AddOtherLocationDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDialogTitle"
            style="@style/txt13SemiBoldWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Enter your pickup location" />

        <EditText
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_95sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Enter your pickup location"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@drawable/edit_text_stroke"
            android:fontFamily="@font/sfuitext_regular"
            android:textColorHint="@color/white_50"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="@dimen/_14sdp"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls"
            android:singleLine="false"
            android:gravity="start|top"
            android:imeOptions="actionDone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.70dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancel"
                style="@style/txt12SemiBoldWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/red" />

            <View
                android:layout_width="0.70dp"
                android:layout_height="match_parent"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/tvDone"
                style="@style/txt12SemiBoldWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_weight="1"
                android:textColor="@color/cancel" />

        </LinearLayout>

    </LinearLayout>

</com.whosin.business.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>