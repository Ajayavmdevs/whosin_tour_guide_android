<?xml version="1.0" encoding="utf-8"?>
<com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:corner_radius="@dimen/_10sdp"
    android:background="@color/bucket_dialog"
    android:layout_marginHorizontal="@dimen/_10sdp"
    tools:context=".ui.activites.venue.Bucket.DeleteBucketDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/txt14SemiBoldWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="whosinApp" />

        <TextView
            android:id="@+id/tvConfirmTitle"
            style="@style/txt14Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Are you want to delete\n the bucket " />

        <EditText
            android:id="@+id/tvName"
            style="@style/BucketEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:hint="Enter Bucket name"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.70dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancel"
                style="@style/txt14SemiBoldWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/cancel" />

            <View
                android:layout_width="0.70dp"
                android:layout_height="match_parent"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/tvYes"
                style="@style/txt14SemiBoldWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_weight="1"
                android:textColor="@color/red" />

        </LinearLayout>



    </LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:indeterminate="true"
        android:indeterminateTint="@color/brand_pink"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>