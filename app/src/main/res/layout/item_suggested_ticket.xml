<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_220sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
            android:id="@+id/imageConstraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:corner_radius="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- top-left heart button -->
            <LinearLayout
                android:id="@+id/btnFavorite"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/mycart_background"
                android:backgroundTint="@color/white_50"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivFavourite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:src="@drawable/icon_heart_withoutfil"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/favTicketProgressBar"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/brand_pink"
                    android:visibility="gone" />
            </LinearLayout>
            <!-- top-right price tag -->
            <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                android:id="@+id/roundLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/brand_pink"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_4sdp"
                app:bottom_left_corner_radius="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:top_right_corner_radius="@dimen/_10sdp">
                <TextView
                    style="@style/txt10Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="From"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/tvAED"
                    style="@style/txt11SemiBoldWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:text="à¸¿750"
                    android:textColor="@color/white" />
            </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

            <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                android:id="@+id/ticketTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="#56F9E4"
                android:paddingHorizontal="@dimen/_8ssp"
                android:paddingVertical="@dimen/_2sdp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/roundLinear"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvRecentlyAddedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfuitext_bold"
                    android:gravity="center_vertical"
                    android:text="Recently added"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

            </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ticket_rating_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="#80597175"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toTopOf="@id/bottom_overlay"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/ticket_rating_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/ImgRating"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:src="@drawable/icon_star" />

                    <TextView
                        android:id="@+id/tvRate"
                        style="@style/txt11SemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- bottom gradient overlay placed over the image -->
            <LinearLayout
                android:id="@+id/bottom_overlay"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:gravity="bottom"
                android:background="@drawable/gradient_overlay"
                app:layout_constraintBottom_toBottomOf="@+id/viewPager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/overlayTitle"
                    style="@style/txt13Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Luxury Boat Rentals 80 Feet"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:maxLines="3"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:ellipsize="end" />

                <LinearLayout
                    android:id="@+id/startingFromLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDiscount"
                        style="@style/txt11Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@drawable/discount_tag"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:text="20%"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/imageConstraint" />

                    <TextView
                        android:id="@+id/tvStatingTile"
                        style="@style/txt10RegularSFSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starting "
                        android:textColor="@color/white_90" />

                    <TextView
                        android:id="@+id/discountText"
                        style="@style/txt10RegularSF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/ticket_from_amount"
                        style="@style/txt10RegularSFSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:textColor="@color/white_90" />
                </LinearLayout>
            </LinearLayout>
    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
