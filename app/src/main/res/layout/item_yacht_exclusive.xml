<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear"
    android:layout_width="@dimen/_218sdp"
    android:layout_height="@dimen/_130sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:background="@drawable/sky_deal_bg"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
            android:layout_width="@dimen/_95sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:top_left_corner_radius="@dimen/_10sdp"
            app:bottom_left_corner_radius="@dimen/_10sdp"
           >

            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_venue_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="center" />

        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/txt14Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLines="2"
                android:text=""
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvSubTitle"
                style="@style/txt12RegularWhite85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLines="5"
                android:text=" " />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>