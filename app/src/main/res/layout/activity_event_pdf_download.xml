<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activites.CmProfile.EventPdfDownloadActivity">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:blurOverlayColor="@color/white_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ivClose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:padding="@dimen/_5sdp"
                            android:paddingStart="@dimen/_15sdp"
                            android:src="@drawable/icon_left_back_arrow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                            android:id="@+id/linearUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/slider_bg"
                            android:orientation="vertical"
                            app:corner_radius="@dimen/_10sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ivClose">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imgUserLogo"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvUser"
                                    style="@style/txt12SemiBold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/tvUserEmail"
                                    style="@style/txt10Regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:maxLines="1"
                                    android:text="john@gmail.com"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

                        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                            android:id="@+id/plusOneLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/slider_bg"
                            android:orientation="vertical"
                            app:corner_radius="@dimen/_10sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearUser">

                            <TextView
                                android:id="@+id/onePlusTv"
                                style="@style/txt11Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_7sdp"
                                android:text="Plus-One invited" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/plusOneRecycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10sdp" />

                        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

                        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                            android:id="@+id/linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@drawable/redeem_bg"
                            android:backgroundTint="@color/slider_bg"
                            android:orientation="vertical"
                            app:corner_radius="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/plusOneLinearLayout">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_13sdp"
                                android:layout_marginBottom="@dimen/_5sdp">

                                <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
                                    android:id="@+id/roundImageLayout"
                                    android:layout_width="@dimen/_36sdp"
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    app:corner_radius="@dimen/_10sdp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/eventIv"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop" />

                                </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/roundImageLayout"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <TextView
                                        android:id="@+id/tvEventTitle"
                                        style="@style/txt12SemiBold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="" />

                                    <TextView
                                        android:id="@+id/tvDescription"
                                        style="@style/txt10Regular"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:maxLines="1"
                                        android:text="" />

                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:id="@+id/detailContanier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                app:layout_constraintBottom_toTopOf="@+id/viewLine"
                                app:layout_constraintTop_toBottomOf="@+id/venueContanier">

                                <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
                                    android:id="@+id/imageConstraint"
                                    android:layout_width="@dimen/_105sdp"
                                    android:layout_height="@dimen/_78sdp"
                                    app:corner_radius="@dimen/_10sdp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/imageVenue"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="center"
                                        android:src="@color/gray"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_12sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtDate"
                                        style="@style/txt13Bold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:maxLines="2"
                                        android:text="" />

                                    <TextView
                                        android:id="@+id/txtTime"
                                        style="@style/txt13SemiBoldWhite"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:text="" />

                                    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
                                        android:id="@+id/eventCategoriLayout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:background="@color/green"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_1sdp"
                                        app:corner_radius="@dimen/_12sdp">

                                        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@color/slider_bg"
                                            android:gravity="center"
                                            android:orientation="vertical"
                                            app:cardCornerRadius="@dimen/_10sdp"
                                            app:corner_radius="@dimen/_12sdp">

                                            <TextView
                                                android:id="@+id/eventCategori"
                                                style="@style/txt11Regular"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingHorizontal="@dimen/_5sdp"
                                                android:paddingVertical="@dimen/_1sdp"
                                                android:text=""
                                                android:gravity="center_horizontal"
                                                android:textColor="@color/green" />

                                        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

                                    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/locationLinear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageLocation"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:src="@drawable/venue_location" />

                                <TextView
                                    android:id="@+id/locationTv"
                                    style="@style/txt10Regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:maxLines="2"
                                    android:text="" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtDescription"
                                style="@style/txt10Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:maxLines="4"
                                android:text="You are confirmed. Please make sure that you attend on time and follow the requirements ðŸ˜Š." />

                            <TextView
                                android:id="@+id/tvInviteByTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:text="Invite by"
                                android:visibility="gone" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:visibility="gone">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imgInviteLogo"
                                    android:layout_width="@dimen/_36sdp"
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/icon_font"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/imgInviteLogo"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <TextView
                                        android:id="@+id/tvInviteUserTitle"
                                        style="@style/txt12SemiBold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="John snow"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:id="@+id/tvInviteUserEmail"
                                        style="@style/txt8RegularWhite70"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:maxLines="1"
                                        android:text="john@gmail.com"
                                        android:textColor="@color/grey" />

                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottieAnimationView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/confirmed_event_animated_icon" />


                            <TextView
                                android:id="@+id/tvConfiremedTitle"
                                style="@style/txt13SemiBoldWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:text="Confirmed"
                                android:visibility="visible" />

                        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </eightbitlab.com.blurview.BlurView>

</androidx.constraintlayout.widget.ConstraintLayout>