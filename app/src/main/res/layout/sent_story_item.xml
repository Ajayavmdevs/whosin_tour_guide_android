<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="wrap_content">

    <com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout
        android:id="@+id/layoutSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/_5sdp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/roundCornerConstraintLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:corner_radius="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/story_share_icon"
            android:padding="@dimen/_8sdp"
            android:layout_gravity="center" />

    </com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

    <com.whosin.business.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
        android:id="@+id/roundCornerConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:corner_radius="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_220sdp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivMsg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/constraintHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/story_top_bottom_shadow"
            android:padding="@dimen/_6sdp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iconImg"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/txt10SemiBoldWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="" />

        </LinearLayout>

    </com.whosin.business.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

    <TextView
        android:id="@+id/txtStoryUnavailable"
        style="@style/txt12Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/grey"
        android:visibility="gone"
         app:layout_constraintBottom_toTopOf="@+id/label"
        app:layout_constraintTop_toBottomOf="@+id/roundCornerConstraintLayout"
        android:text="Story Unavailable" />

    <LinearLayout
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStoryUnavailable"
        android:layout_marginBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/txtTime"
            style="@style/txt8Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhosIn" />

        <ImageView
            android:id="@+id/imgMsgStatus"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:src="@drawable/icon_msg_sent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>