<?xml version="1.0" encoding="utf-8"?>
<com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:corner_radius="@dimen/_8sdp">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="center"
        app:layout_constraintDimensionRatio="h,1:1.1" />

    <LinearLayout
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/offer_bg"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.whosin.app.comman.ui.UserInfoView
            android:id="@+id/venueContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_7sdp"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layoutInvite"
        app:layout_constraintBottom_toTopOf="@id/blurView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTitle"
            style="@style/txt18SemiBoldWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="" />

        <TextView
            android:id="@+id/txtSubTitle"
            style="@style/txt11Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:maxLines="10"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/pink_button_bg"
        android:gravity="center"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@+id/headerView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtMenu"
            style="@style/txt12SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite" />

    </LinearLayout>




</com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>