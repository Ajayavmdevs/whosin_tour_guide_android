<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/seeAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/userTitle"
            style="@style/txt16SemiBoldWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:lines="1"
            android:text="@string/titleText" />

        <TextView
            android:id="@+id/description"
            style="@style/txt10RegularWhite70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/titleSubText" />
    </LinearLayout>

    <TextView
        android:id="@+id/seeAll"
        style="@style/txt11Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="See All"
        android:textColor="@color/date_red"
        app:layout_constraintBottom_toBottomOf="@id/headerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/headerView" />

    <com.whosin.business.ui.controller.raynaTicketsView.ExploreBlockTicketView
        android:id="@+id/ticketRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/headerView" />
</androidx.constraintlayout.widget.ConstraintLayout>