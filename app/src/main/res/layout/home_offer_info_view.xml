<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/infoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardView"
        >

        <TextView
            style="@style/txt10SemiBoldWhite"
            android:id="@+id/txtOfferTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="05:00 pm - 4:00pm"
            app:drawableLeftCompat="@drawable/icon_time"
            app:drawableRightCompat="@drawable/icon_time_info" />

        <TextView
            style="@style/txt10SemiBoldWhite"
            android:id="@+id/txtDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Weekday"
            app:drawableLeftCompat="@drawable/icon_venue_calender"
            android:layout_marginTop="@dimen/_7sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:id="@+id/txtLabelFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From :"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white_70"/>

            <TextView
                style="@style/txt10SemiBoldWhite"
                android:id="@+id/txtFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Thu, 14 Dec 2023" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tillDateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:id="@+id/txtLabelTill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Till:"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white_70"/>

            <TextView
                style="@style/txt10SemiBoldWhite"
                android:id="@+id/txtTillDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="12/04/2023" />
        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_88sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/infoTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgOffer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>