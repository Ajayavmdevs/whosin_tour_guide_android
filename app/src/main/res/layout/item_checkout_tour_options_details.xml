<?xml version="1.0" encoding="utf-8"?>
<com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginVertical="@dimen/_10sdp"
    android:background="@color/gray_500"
    android:orientation="vertical"
    app:corner_radius="@dimen/_7sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tourDetailLayout">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_8sdp"
        android:background="@color/card_color">

        <TextView
            android:id="@+id/titleOptionName"
            android:textSize="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:fontFamily="@font/sf_medium"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvOptionDetail"
            style="@style/txt9RegularSF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp" />

        <LinearLayout
            android:id="@+id/addOnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:visibility="gone">

            <com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/tour_option_spinner_stock_bg"
                app:corner_radius="@dimen/_6sdp">

                <LinearLayout
                    android:id="@+id/divider_with_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/txt12SemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text="Add-Ons" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/tour_option"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_add_ons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                android:id="@+id/cancellation_policy_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/cancellation_policy__bg"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_6sdp"

                app:corner_radius="@dimen/_10sdp">

                <TextView
                    android:id="@+id/btnCancellationPolicy"
                    style="@style/txt9SemiBoldWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="Cancellation Policy" />


            </com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

            <com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                android:id="@+id/btn_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="0.65"
                app:corner_radius="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/infoIcon"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/venue_info"
                    android:rotation="180"
                    android:layout_marginTop="0.50dp"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/btn_more_info_view"
                    style="@style/txt9SemiBoldWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_4sdp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:textColor="@color/gray"
                    android:text="Inclusions &amp; Details" />

            </com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/locationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvTickeDescription"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivLoction"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/location"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/brand_pink" />

            <TextView
                android:id="@+id/tvAddress"
                style="@style/txt11Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivLoction"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/locationLayout">

            <ImageView
                android:id="@+id/ivtime"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/icon_time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_minus1sdp"
                app:tint="@color/brand_pink" />

            <TextView
                android:id="@+id/tvTourTime"
                style="@style/txt11Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivtime"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/timeLayout">

            <ImageView
                android:id="@+id/ivdate"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/icon_event_calender"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/brand_pink" />

            <TextView
                android:id="@+id/tvTourDate"
                style="@style/txt11Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivdate"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/totalPersonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/dateLayout">

            <ImageView
                android:id="@+id/ivPerson"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/icon_pick_up"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/brand_pink" />

            <TextView
                android:id="@+id/typeTitle"
                style="@style/txt10SemiBoldWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="Transfer Type  :"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/ivPerson"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvType"
                style="@style/txt10Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/typeTitle"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/card_color"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_4sdp">

        <include
            android:id="@+id/totalAdults"
            layout="@layout/tv_views_for_person" />

        <include
            android:id="@+id/totalChilds"
            layout="@layout/tv_views_for_person" />

        <include
            android:id="@+id/totalInfants"
            layout="@layout/tv_views_for_person" />

        <include
            android:id="@+id/pricePerTrip"
            android:visibility="gone"
            layout="@layout/tv_views_for_person" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/totalAmoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/totalAmoutTv"
            style="@style/txt11Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ticket Amount"
            android:textColor="@color/white_85" />

        <TextView
            android:id="@+id/totalAmoutAed"
            style="@style/txt11Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="AED 90.0"
            android:textColor="@color/white_85" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/promoCodeLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/totalAmoutLayout">

        <TextView
            style="@style/txt11Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  Promo Code"
            android:textColor="@color/white_85" />

        <TextView
            android:id="@+id/promoCodeAed"
            style="@style/txt11Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="AED 90.0"
            android:textColor="@color/white_85" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discountLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/promoCodeLinear">

        <TextView
            android:id="@+id/discountTv"
            style="@style/txt11Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discount"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="@color/white_85" />

        <TextView
            android:id="@+id/discountAed"
            style="@style/txt11Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="AED 90.0"
            android:textColor="@color/white_85" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addOnLiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/promoCodeLinear">

        <TextView
            android:id="@+id/addOnpricetv"
            style="@style/txt11Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add-on amount"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="@color/white_85" />

        <TextView
            android:id="@+id/addonaed"
            style="@style/txt11Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="AED 90.0"
            android:textColor="@color/white_85" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vatLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/discountLinear">

        <TextView
            android:id="@+id/vatTv"
            style="@style/txt11Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  VAT"
            android:textColor="@color/white_85" />

        <TextView
            android:id="@+id/vatAed"
            style="@style/txt11Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="AED 90.0"
            android:textColor="@color/white_85" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/finalAmountLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/deal_time_bg"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@+id/vatLinear">

        <TextView
            android:id="@+id/finalAmountTv"
            style="@style/txt11SemiBoldWhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Final Amount" />

        <TextView
            android:id="@+id/finalAmountAed"
            style="@style/txt11SemiBoldWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="AED 90.0"
            android:textColor="@color/white" />

    </LinearLayout>

</com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout>
