<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_bg_color"
    android:isScrollContainer="false"
    android:minHeight="@dimen/_400sdp"
    app:top_left_corner_radius="@dimen/_20sdp"
    app:top_right_corner_radius="@dimen/_20sdp"
    tools:context=".ui.activites.raynaTicket.RaynaParticipantDetailActivity">

    <include
        android:id="@+id/constraintHeader"
        layout="@layout/item_rayna_header_view" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nextButtonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
                android:id="@+id/mainConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/tour_option_background"
                android:padding="@dimen/_1sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_10sdp"
                app:corner_radius="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                    android:id="@+id/detailLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/venue_bg"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:corner_radius="@dimen/_8sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvHeaderTitle"
                        style="@style/txt14SemiBoldWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Primary Guest Details"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtName"
                        style="@style/txt11Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="Name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle" />

                    <LinearLayout
                        android:id="@+id/nameLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtName">

                        <Spinner
                            android:id="@+id/select_prefix"
                            style="@style/txt12Regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="0.4"
                            android:background="@drawable/tour_option_spinner_stock_bg"
                            android:gravity="center_horizontal"
                            android:imeOptions="actionDone"
                            android:nextFocusDown="@+id/EdName"
                            android:paddingVertical="@dimen/_5sdp"
                            android:paddingStart="@dimen/_3sdp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray" />

                        <EditText
                            android:id="@+id/editFirstName"
                            style="@style/CommonEditDetailForRaynaTicket"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:background="@drawable/tour_option_spinner_stock_bg"
                            android:hint="Enter firstname"
                            android:inputType="textPersonName"
                            android:nextFocusDown="@+id/EdSurname"
                            android:paddingVertical="@dimen/_5sdp"
                            android:scrollHorizontally="true" />

                        <EditText
                            android:id="@+id/editLastName"
                            style="@style/CommonEditDetailForRaynaTicket"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_weight="0.9"
                            android:background="@drawable/tour_option_spinner_stock_bg"
                            android:hint="Enter lastname"
                            android:inputType="textPersonName"
                            android:nextFocusDown="@+id/editEmail"
                            android:paddingVertical="@dimen/_5sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nameLinear">

                        <TextView
                            android:id="@+id/txtAge"
                            style="@style/txt11Regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="center_vertical"
                            android:text="Pax Type" />

                        <TextView
                            android:id="@+id/txtEmail"
                            style="@style/txt11Regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="Email ID" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nameLinear">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                android:background="@drawable/tour_option_spinner_stock_bg"
                                android:paddingVertical="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/tvPaxTypeHint"
                                    style="@style/txt12Regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_8sdp"
                                    android:drawableEnd="@drawable/icon_drop_down_with_below_arrow"
                                    android:hint="Select"
                                    android:textColorHint="@color/gray"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>

                        <LinearLayout
                             android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <EditText
                                android:id="@+id/editEmail"
                                style="@style/CommonEditDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:autofillHints="name"
                                android:background="@drawable/tour_option_spinner_stock_bg"
                                android:hint="Enter email"
                                android:inputType="textEmailAddress"
                                android:nextFocusDown="@+id/editTextPhone"
                                android:paddingVertical="@dimen/_5sdp"
                                android:paddingStart="@dimen/_7sdp"
                                android:singleLine="true" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/passengerPhoneNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="vertical"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/Linear">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/icon_whatsapp"/>

                            <TextView
                                android:id="@+id/contactTitle"
                                style="@style/txt11Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Please enter your active Whatsapp number"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="@dimen/_4sdp"
                                app:layout_constraintTop_toBottomOf="@id/Linear" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/inputContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingVertical="@dimen/_1sdp"
                            android:background="@drawable/tour_option_spinner_stock_bg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/countryCode"
                                style="@style/CountryPickerStyleForSignUp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:visibility="visible"
                                app:ccpDialog_background="@color/black"
                                app:ccpDialog_showPhoneCode="false"
                                app:ccp_showFullName="false"
                                android:paddingTop="0dp"
                                android:translationY="-0.5dp"
                                android:paddingBottom="0dp"
                                app:ccp_textGravity="CENTER"
                                android:paddingVertical="0dp"
                                app:ccp_showNameCode="false"
                                android:clipToPadding="false"
                                app:ccp_showPhoneCode="true"
                                app:ccp_textSize="@dimen/_10sdp" />


                            <EditText
                                android:id="@+id/editPhoneNumber"
                                style="@style/CommonEditDetail"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:background="@null"
                                android:hint="Enter Phone number"
                                android:inputType="phone" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/passengerNationalityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="vertical"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/passengerPhoneNumberLayout">

                        <TextView
                            android:id="@+id/nationalityTitle"
                            style="@style/txt11Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nationality" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/tour_option_spinner_stock_bg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/countryCodeForNationalty"
                                style="@style/CountryPickerStyle"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_27sdp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:layout_weight="1"
                                android:visibility="visible"
                                app:ccpDialog_background="@color/black"
                                app:ccpDialog_showPhoneCode="false"
                                app:ccp_showArrow="false"
                                app:ccp_showFullName="true"
                                app:ccp_showNameCode="false"
                                app:ccp_showPhoneCode="false"
                                app:ccp_textGravity="LEFT"
                                app:ccp_textSize="@dimen/_10sdp" />

                            <ImageView
                                android:id="@+id/dropDownIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:src="@drawable/icon_drop_down_with_below_arrow" />


                        </LinearLayout>


                    </LinearLayout>


                </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>


            </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/guestDetailRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mainConstraint" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/nextButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg_color"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@color/brand_pink"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_7sdp"
            app:corner_radius="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvNext"
                style="@style/txt13Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/nextIv"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:rotation="180"
                android:src="@drawable/icon_left_back_arrow" />

        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>