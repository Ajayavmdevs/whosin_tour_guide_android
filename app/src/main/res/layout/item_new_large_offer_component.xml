<?xml version="1.0" encoding="utf-8"?>
<com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_285sdp"
    android:background="@color/venue_bg"
    android:orientation="vertical"
    app:corner_radius="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutVenueDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:background="@color/light_white4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.whosin.app.comman.ui.UserInfoView
            android:id="@+id/venueContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_7sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:src="@drawable/icon_category_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.whosin.app.ui.controller.HomeOfferInfoView
        android:id="@+id/offerInfoView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_87sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp" />

    <TextView
        android:id="@+id/txtDiscountTag"
        style="@style/txt10SemiBoldWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="@color/light_pitch"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:text="50% off brunch on the primium one"
        android:textColor="@color/light_yellow" />

    <TextView
        android:id="@+id/txtTitle"
        style="@style/txt14SemiBoldWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:ems="10"
        android:gravity="start"
        android:singleLine="true"
        android:text="Business Lunch" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/txt9Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:justificationMode="inter_word"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/white"
        android:text="From delicious famous Robate Grills to delicious Maki rolls, enjoy The Fancy Matsuri brunch experience witch experience witch experience with your loved ones." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <TextView
            android:id="@+id/inviteButton"
            style="@style/txt11Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_bg"
            android:backgroundTint="@color/button_pink"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Invite your friends"
            android:visibility="gone" />

        <TextView
            android:id="@+id/buyNowButton"
            style="@style/txt11Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_bg"
            android:backgroundTint="@color/buy_button"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_2sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Buy now"
            android:visibility="visible" />

        <TextView
            android:id="@+id/claimButton"
            style="@style/txt11Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_bg"
            android:backgroundTint="@color/claim_button"
            android:gravity="center"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Claim discount"
            android:visibility="visible" />

    </LinearLayout>

</com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>



