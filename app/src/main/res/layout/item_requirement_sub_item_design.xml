<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_4sdp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivForRequirement"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:src="@drawable/icon_not_requirements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRequirement"
        style="@style/txt10Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:text="Post 4 stories tagging the Venue on instagram"
        app:layout_constraintEnd_toStartOf="@id/contanierLayout"
        app:layout_constraintStart_toEndOf="@id/ivForRequirement"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/contanierLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/icon_edit_item" />

        <ImageView
            android:id="@+id/btnRemove"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_3sdp"
            android:padding="@dimen/_1sdp"
            android:src="@drawable/icon_remove" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>