<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:scaleType="centerInside"
        android:src="@drawable/plan_detail_logo"
        app:tint="@color/white" />

    <TextView
        style="@style/txt25Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHOSâ€™IN"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/tvMainTitle"
        style="@style/txt15Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is it you trying to sign in?"
        android:layout_margin="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/tvDeviceNameTitle"
        style="@style/txt12Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/txtDevice"
        style="@style/txt11RegularWhite85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nokia 8 Serocco"
        android:layout_marginHorizontal="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/tvLocationTitle"
        style="@style/txt12Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/txtLocation"
        style="@style/txt11RegularWhite85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rajkot, India"
        android:layout_marginHorizontal="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/idTimeTitle"
        style="@style/txt12Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/txtTime"
        style="@style/txt11RegularWhite85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just Now"
        android:layout_marginHorizontal="@dimen/_20sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_20sdp">

        <com.whosin.business.ui.controller.IconButton
            android:id="@+id/btnNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:buttonTitle="NO, IT'S NOT ME"
            app:buttonTintColor="@color/white"
            app:buttonCorner="@dimen/_20sdp"
            app:buttonBg="@color/brand_pink"/>

        <com.whosin.business.ui.controller.IconButton
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:buttonTitle="YES"
            app:buttonTintColor="@color/white"
            app:buttonCorner="@dimen/_20sdp"
            app:buttonBg="@color/green"
            android:layout_marginStart="@dimen/_10sdp"/>

    </LinearLayout>

</LinearLayout>