<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:paddingHorizontal="@dimen/_12sdp"
    tools:context=".ui.fragment.PromoterCreateEvent.PromoterEventRequirementFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.whosin.app.ui.controller.promoter.PromoterRequirementsView
                android:id="@+id/reqrimentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:main_title_name="Requirements"
                app:requirementsFieldIcon="@drawable/icon_double_check"
                app:show_main_title="true"
                app:subTitleText="Add the requirements Allowed" />

            <com.whosin.app.ui.controller.promoter.PromoterRequirementsView
                android:id="@+id/benefitsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reqrimentLayout"
                app:requirementsFieldIcon="@drawable/icon_rejected_close"
                app:show_main_title="false"
                app:subTitleText="Add the requirements that are not Allowed" />

            <com.whosin.app.ui.controller.promoter.PromoterRequirementsView
                android:id="@+id/benfitsIncludedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/benefitsLayout"
                app:main_title_name="Benefits"
                app:requirementsFieldIcon="@drawable/icon_double_check"
                app:show_main_title="true"
                app:subTitleText="Add the benefits that are  Included" />

            <com.whosin.app.ui.controller.promoter.PromoterRequirementsView
                android:id="@+id/benfitNotIncludedlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/benfitsIncludedLayout"
                app:requirementsFieldIcon="@drawable/icon_rejected_close"
                app:show_main_title="false"
                app:subTitleText="Add the requirements that are not Allowed" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>