<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activites.raynaTicket.BottomSheets.TabbyPaymentBottomSheet">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout
            android:id="@+id/btnVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:corner_radius="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent">

            <CheckBox
                android:id="@+id/ivClose"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_4sdp"
                android:button="@drawable/icon_close_without_bg"
                android:buttonTint="@color/white"
                android:padding="@dimen/_6sdp" />

        </com.whosin.business.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainHeaderView"/>


</androidx.constraintlayout.widget.ConstraintLayout>