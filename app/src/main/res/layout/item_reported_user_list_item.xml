<?xml version="1.0" encoding="utf-8"?>
<com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@color/card_color"
    android:padding="@dimen/_8sdp"
    app:corner_radius="@dimen/_8sdp">


    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
        android:id="@+id/imgProfileLayout"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_35sdp"
        app:corner_radius="@dimen/_8sdp">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/gray_400" />

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="@color/black_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:id="@+id/showConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:tint="@color/white"
            android:src="@drawable/password_hide" />

    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>


    <LinearLayout
        android:id="@+id/detail_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/iconMenu"
        app:layout_constraintStart_toEndOf="@+id/imgProfileLayout"
        app:layout_constraintTop_toTopOf="@+id/imgProfileLayout">

        <TextView
            android:id="@+id/title"
            style="@style/txt11RegularSF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfuitext_regular"
            android:text="Alice Johnson"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfuitext_regular"
            android:text="Spamming chat with promotional link"
            android:textColor="@color/white_85"
            android:textSize="@dimen/_9sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgProfileLayout"
        app:layout_constraintTop_toBottomOf="@+id/detail_layout">

        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
            android:id="@+id/status_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/cancellation_policy__bg"
            android:gravity="start"
            android:orientation="vertical"
            app:corner_radius="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvStatus"
                style="@style/txt9RegularSF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/_14sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="pending"
                android:textColor="@color/white" />


        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>


        <TextView
            android:id="@+id/reportDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/sfuitext_regular"
            android:gravity="end"
            android:text=""
            android:textColor="@color/white_85"
            android:textSize="@dimen/_10sdp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iconMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/icon_category_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>