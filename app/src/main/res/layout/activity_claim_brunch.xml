<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activites.offers.ClaimBrunchActivity">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:blurOverlayColor="@color/semiTransparentGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:overlay="@id/blurView">

        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical"
            app:corner_radius="@dimen/_12sdp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey"
                android:orientation="horizontal">

                <com.whosin.app.comman.ui.UserInfoView
                    android:id="@+id/venueContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageMyCart"
                    app:layout_constraintStart_toEndOf="@id/ivBack"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/closeBtn"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_close_btn"
                    />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layoutBrunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/black"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/package_shadow"
                        android:orientation="vertical"
                        app:corner_radius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@id/layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtName"
                                style="@style/txt12SemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:maxLines="1"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="No Offer" />


                            <ImageView
                                android:id="@+id/btnDropDown"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_gravity="end"
                                android:src="@drawable/arrow_drop_down"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBrunchList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="2"
                            android:visibility="visible"
                            tools:listitem="@layout/layout_brunch_list" />

                        <TextView
                            android:id="@+id/txtNoData"
                            style="@style/txt9SemiBoldWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="No package available"
                            android:textColor="@color/white_2"
                            android:visibility="gone" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_8sdp"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvPakagesTitle"
                                    style="@style/txt11Regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginRight="@dimen/_8sdp"
                                    android:text="Packages" />


                                <TextView
                                    android:id="@+id/txtPackages"
                                    style="@style/txt11SemiBoldWhite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text="AED 0"

                                    android:textColor="@color/brand_pink" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/_14sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvSavingTitle"
                                    style="@style/txt11Regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="Savings" />

                                <TextView
                                    android:id="@+id/txtDiscount"
                                    style="@style/txt11SemiBoldWhite"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text="AED 0"
                                    android:gravity="end"
                                    android:textColor="@color/brand_pink" />

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_8sdp"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView">

                            <TextView
                                android:id="@+id/startNumberTextView"
                                style="@style/txt13Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:text="Total amount" />


                            <TextView
                                android:id="@+id/txtTotalAmount"
                                style="@style/txt12SemiBoldWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="AED 0"
                                android:textColor="@color/brand_pink" />

                        </LinearLayout>

                    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>


                    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="#3E414A"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:corner_radius="@dimen/_8sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tvTitleForClaim"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                style="@style/txt11Bold" />

                            <TextView
                                android:id="@+id/tvMessage"
                                style="@style/txt11RegularWhite85"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:text=" " />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_14sdp"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvChargesPerClaimTitle"
                                    style="@style/txt11RegularWhite85"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Charges per claim" />

                                <TextView
                                    android:id="@+id/txtTotal"
                                    style="@style/txt11SemiBoldWhite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_6sdp"
                                    android:text="AED 0"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/brand_pink" />

                            </LinearLayout>


                        </LinearLayout>


                    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>


                    <com.chaos.view.PinView
                        android:id="@+id/pinView"
                        style="@style/txt5SemiBoldWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:cursorVisible="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:itemBackground="@color/light_grey_2"
                        app:hideLineWhenFilled="true"
                        app:itemCount="4"
                        app:itemHeight="50dp"
                        app:itemRadius="10dp"
                        app:itemSpacing="@dimen/_8sdp"
                        app:itemWidth="50dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lineColor="#3B3B3B"
                        app:lineWidth="@dimen/_1sdp" />

                    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                        android:id="@+id/claimNowButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:background="@color/button_pink"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_13sdp"
                        android:paddingVertical="@dimen/_6sdp"
                        android:weightSum="2"
                        app:corner_radius="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/tvClaimNowTitle"
                            style="@style/txt12SemiBoldWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Claim Now"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

                    <TextView
                        android:id="@+id/tvAsTheStaff"
                        style="@style/txt10Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="Ask the staff for the claim code before requesting the bill in the venue"
                        android:textColor="@color/white_2" />

                </LinearLayout>

            </ScrollView>

        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

    </eightbitlab.com.blurview.BlurView>

</androidx.constraintlayout.widget.ConstraintLayout>