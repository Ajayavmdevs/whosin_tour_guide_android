<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_bg_color"
    tools:context=".ui.activites.venue.VenueActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/txtLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/venue_background"
                    android:backgroundTint="@color/venue_bg_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_65sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageVenue"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_venue_image"
                                app:showCaption="false"
                                app:showIndicator="false"
                                app:showNavigationButtons="false" />


                            <com.whosin.app.ui.controller.VenueFollowButton
                                android:id="@+id/btnFollowButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_5sdp"
                                android:textAllCaps="false"
                                app:venueFollowButtonBg="@drawable/black_btn_bg"
                                app:venueFollowButtonCorner="@dimen/_40sdp"
                                app:venueFollowButtonTintColor="@color/white"
                                app:venueFollowButtonTitle="Follow" />

                        </androidx.cardview.widget.CardView>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_minus25sdp"
                        android:background="@drawable/pink_button_bg"
                        android:backgroundTint="@color/slider_bg"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/constraint">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/imageSlideRecycler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_image_slide_recycler" />

                        <TextView
                            android:id="@+id/tvCount"
                            style="@style/txt12SemiBoldWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="+6"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linear">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/venue_info" />

                            <TextView
                                android:id="@+id/txtInfo"
                                style="@style/txt11Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="Info" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/locationLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/venue_location" />

                            <TextView
                                android:id="@+id/tvLocation"
                                style="@style/txt11Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="Location" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/shareVeneueLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ivShare"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:padding="@dimen/_1sdp"
                                android:src="@drawable/venue_share" />

                            <TextView
                                android:id="@+id/txtShare"
                                style="@style/txt11Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="Share" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgRecommandation"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/thumb_icon_24" />

                            <TextView
                                android:id="@+id/txtRecommend"
                                style="@style/txt11Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutInvite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:background="@drawable/pink_button_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_5sdp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linearOption">


                        <TextView
                            android:id="@+id/txtMenu"
                            style="@style/txt12SemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invite" />

                    </LinearLayout>


                    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                        android:id="@+id/ilOpenTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:background="@color/white_13"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_5sdp"
                        android:weightSum="3"
                        app:corner_radius="@dimen/_5sdp"
                        app:layout_constraintEnd_toStartOf="@id/menuLinear"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutInvite">

                        <TextView
                            android:id="@+id/tvOpen"
                            style="@style/txt12SemiBoldWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Open"
                            android:textColor="@color/green_solid" />

                        <TextView
                            android:id="@+id/txtTime"
                            style="@style/txt11Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:layout_weight="1"
                            android:text="12:00 PM - 3:00 AM" />

                        <ImageView
                            android:id="@+id/ivTime"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_gravity="end"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:src="@drawable/icon_time_info" />

                    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

                    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                        android:id="@+id/menuLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/white_13"
                        android:paddingHorizontal="@dimen/_14sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:visibility="visible"
                        app:corner_radius="@dimen/_5sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutInvite">

                        <TextView
                            android:id="@+id/tvMenu"
                            style="@style/txt12Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menu"
                            android:textColor="@color/green" />
                    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>


                    <LinearLayout
                        android:id="@+id/Features"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ilOpenTime">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ilFrequency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvFrequencyLabel"
                                style="@style/txt12SemiBoldWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="CM user visit frequency"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
                                android:id="@+id/frequencyDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:background="#262529"
                                app:corner_radius="@dimen/_7sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/editIcon"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/txtFrequency"
                                    style="@style/txt10SemiBoldWhite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_35sdp"
                                    android:paddingVertical="@dimen/_6sdp"
                                    android:text=""
                                    android:textColor="@color/white" />

                            </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

                            <ImageView
                                android:id="@+id/editIcon"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_edit_item"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <LinearLayout
                            android:id="@+id/ilFeatures"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvFraturesTitle"
                                style="@style/txt12SemiBoldWhite"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="match_parent"
                                android:gravity="start"
                                android:text="Features" />

                            <TextView
                                android:id="@+id/txtFeatures"
                                style="@style/txt11RegularWhite85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ilCuisine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvCuisineTitle"
                                style="@style/txt12SemiBoldWhite"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Cuisine" />

                            <TextView
                                android:id="@+id/txtCuisine"
                                style="@style/txt11RegularWhite85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ilMusic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvMusicTitle"
                                style="@style/txt12SemiBoldWhite"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:text="Music" />

                            <TextView
                                android:id="@+id/tvMusic"
                                style="@style/txt11RegularWhite85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ilTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvThemeTitle"
                                style="@style/txt12SemiBoldWhite"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:text="Theme" />

                            <TextView
                                android:id="@+id/tvTheme"
                                style="@style/txt11RegularWhite85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ilDressCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvDressCodeTitle"
                                style="@style/txt12SemiBoldWhite"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:text="Dress Code" />

                            <TextView
                                android:id="@+id/tvDressCode"
                                style="@style/txt11RegularWhite85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/dealLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtLayout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearDeal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvExclusiveTitle"
                                style="@style/txt17Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:text="Exclusive Deals"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tvSubTitle"
                                style="@style/txt12Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Buy your voucher or send a gift to your friends"
                                android:textColor="@color/grey" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/exclusiveRecycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDescription"
                            style="@style/txt11Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:justificationMode="none"
                            android:text="Followers"
                            android:textColor="@color/grey_text" />


                        <LinearLayout
                            android:id="@+id/linearRating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvTapToRate"
                                style="@style/txt14Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap To Rate" />


                            <ImageView
                                android:id="@+id/ImgRating"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/icon_star" />

                            <TextView
                                android:id="@+id/tvRate"
                                style="@style/txt11SemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0" />

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/rating"
                                style="@style/Widget.MaterialRatingBar.RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="@dimen/_18sdp"
                                android:layout_weight="1"
                                android:stepSize="1.0"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:mrb_progressBackgroundTint="@color/white"
                                app:mrb_progressTint="@color/brand_pink"
                                app:mrb_secondaryProgressTint="@color/brand_pink"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/ratingReviewRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_10sdp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                                android:id="@+id/linearReview"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="@dimen/_15sdp"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:background="@drawable/pink_button_bg"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingVertical="@dimen/_5sdp"
                                app:corner_radius="@dimen/_12sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:src="@drawable/icon_write_review" />

                                <TextView
                                    android:id="@+id/txtReviewTitle"
                                    style="@style/txt12SemiBoldWhite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Write a Review" />

                            </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

                            <TextView
                                android:id="@+id/tvSeeAll"
                                style="@style/txt12Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:text="See All"
                                android:textColor="@color/brand_pink"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/linearOffer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCheckOfferTitle"
                                style="@style/txt17Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:text="Check out our offers" />

                            <TextView
                                android:id="@+id/tvClickToClaimTitle"
                                style="@style/txt11RegularWhite85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
