<com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp">

    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
        android:id="@+id/linearMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/specification_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_5sdp"
        app:corner_radius="@dimen/_8sdp">

        <ImageView
            android:id="@+id/ivFeatures"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/ic_person"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/txt11Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Catarman"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/iconText"
            style="@style/txt10Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ðŸ›¥ï¸ Catarman"
            android:textColor="@color/white_85" />
    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>
</com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>