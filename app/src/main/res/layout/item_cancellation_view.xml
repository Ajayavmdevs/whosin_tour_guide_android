<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tour_option_background"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/constraintHeader">

    <LinearLayout
        android:id="@+id/timeLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFromTitle"
                style="@style/txt10Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From : "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/fromDate"
                style="@style/txt10Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvToDate"
                style="@style/txt10Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   To   : "

                android:textColor="@color/white" />

            <TextView
                android:id="@+id/toDate"
                style="@style/txt10Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white" />

        </LinearLayout>



    </LinearLayout>






        <TextView
            android:id="@+id/refundTextView"
            style="@style/txt11SemiBoldWhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:text="0% Refund "
            android:textColor="@color/white" />

    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_20"
        app:layout_constraintTop_toBottomOf="@+id/timeLinear" />

</androidx.constraintlayout.widget.ConstraintLayout>
