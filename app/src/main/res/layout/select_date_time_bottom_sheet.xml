<?xml version="1.0" encoding="utf-8"?>
<com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#121727"
    android:layout_gravity="bottom"
    app:top_left_corner_radius="@dimen/_20sdp"
    app:top_right_corner_radius="@dimen/_20sdp">


    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/materialCalenderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerColor="#121727"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view"
        app:selectionColor="@color/brand_pink"
        android:background="@color/clear"
        app:abbreviationsBarColor="#121727"
        app:pagesColor="#121727"
        app:daysLabelsColor="@color/white"
        app:headerLabelColor="@color/white"
        app:abbreviationsLabelsColor="@color/white"
        app:disabledDaysLabelsColor="@color/white_30"
        app:type="one_day_picker"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@color/white_2"
        app:layout_constraintBottom_toTopOf="@id/txtDate"
        android:layout_marginBottom="@dimen/_20sdp"
         />

    <TextView
        android:id="@+id/txtDate"
        style="@style/txt12Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="date"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtDateTimeTitle" />

    <TextView
        android:id="@+id/txtDateTimeTitle"
        style="@style/txt10Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:visibility="gone"
        android:text="select event start time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/timeSlotRecycler" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timeSlotRecycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDone"
        android:layout_marginVertical="@dimen/_15sdp"
        />

    <com.whosin.app.ui.controller.IconButton
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        app:buttonBg="@color/green_medium"
        app:buttonCorner="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_15sdp"
        app:buttonTitle="Done"
        app:buttonTintColor="@color/white"/>

</com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>