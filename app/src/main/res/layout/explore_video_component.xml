<?xml version="1.0" encoding="utf-8"?>
<com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    app:corner_radius="@dimen/_10sdp">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:resize_mode="zoom"
        app:surface_type="texture_view"
        app:use_controller="false" />

    <ImageView
        android:id="@+id/ivCustom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/voice_record"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/video_top_bottom_shadow"/>



    <TextView
        android:id="@+id/btnBookNow"
        style="@style/txt11SemiBoldWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/pink_button_bg_venue"
        android:backgroundTint="@color/explore_video_book_now"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:text="Book Now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_10sdp"/>


    <LinearLayout
        android:id="@+id/detail_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/tvSubDescription"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/tvTitle"
            style="@style/txt15Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/detail_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_1sdp"
            android:fontFamily="@font/sfuitext_bold" />


        <TextView
            android:id="@+id/tvSubTitle"
            style="@style/txt11SemiBoldWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_medium"
            android:textColor="@color/white_70" />


    </LinearLayout>


    <TextView
        android:id="@+id/tvSubDescription"
        style="@style/txt10Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfuitext_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBookNow"
        app:layout_constraintEnd_toStartOf="@+id/btnBookNow"
        app:layout_constraintBottom_toBottomOf="@+id/btnBookNow"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:maxLines="2"
        android:textColor="@color/white_70" />


    <ImageView
        android:id="@+id/btnReplay"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_background"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/icon_refresh_white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
        android:id="@+id/btnVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:background="@color/black_20"
        app:corner_radius="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/iconSoundOff"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_4sdp"
            android:button="@drawable/icon_sound"
            android:buttonTint="@color/white"
            android:padding="@dimen/_6sdp" />

    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:indeterminateTint="@color/brand_pink"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

