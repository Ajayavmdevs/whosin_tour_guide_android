<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".ui.activites.auth.CreatePasswordActivity">

    <com.whosin.app.ui.controller.NavBarWithBack
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftImage="@drawable/icon_next"
        app:navBgColor="@color/transparent"
        app:navTitleColor="@color/white"
        app:rightBtnTitle="Clear"
        app:showBackButton="true" />

    <com.whosin.app.ui.controller.OnBoardTextInfoView
        android:id="@+id/nameControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navbar"
        app:mainTitle="Create your \n Password"
        app:subTitle="Create a strong and secure password to \nprotect  your account" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/liPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/nameControl">

        <EditText
            android:id="@+id/editPassword"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:autofillHints="name"
            app:layout_constraintDimensionRatio="h,381:49"
            android:hint="@string/enter_your_password"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:nextFocusForward="@+id/editLastName"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"

            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/img_password" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/liConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/liPassword">

        <EditText
            android:id="@+id/edConformPsw"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="@string/enter_your_confirm_password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:nextFocusForward="@+id/editLastName"
            android:singleLine="true"
            android:inputType="textPassword"
            app:layout_constraintDimensionRatio="h,381:49"/>

        <ImageView
            android:id="@+id/showConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/img_password" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.whosin.app.ui.controller.RoundButton
        android:id="@+id/imageNext"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_55sdp"
        app:btnDisabled="true"
        app:centerImg="@drawable/icon_next"
        app:imgMargin="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>