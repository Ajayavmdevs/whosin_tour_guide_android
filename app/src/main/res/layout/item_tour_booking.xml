<?xml version="1.0" encoding="utf-8"?>
<com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/labelLayout"
    android:background="@drawable/item_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:background="@color/chat_friends_bg"
        android:paddingVertical="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOptionName"
            style="@style/txt12SemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvOptionDescription"
            style="@style/txt9RegularWhite70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_available__spots" />

            <TextView
                android:id="@+id/tvGuestDetails"
                style="@style/txt8Regular"
                android:layout_width="match_parent"
                android:layout_marginStart="4dp"
                android:layout_height="wrap_content"
                android:text="1x Adult, 0x child, 0x infant"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_event_calender" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                style="@style/txt8Regular"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="2025-06-27"
                android:textColor="@android:color/white" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_event_time" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/txt8Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="08:30:00"
                android:layout_weight="1"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addOnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_7sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/addQuantityInfants">

        <LinearLayout
            android:id="@+id/divider_with_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_9sdp"
            android:layout_marginLeft="@dimen/_9sdp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:gravity="center_vertical">

            <!-- Left divider -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/tour_option" />

            <!-- Center text -->
            <TextView
                style="@style/txt12SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:text="Add-Ons"
                android:textAlignment="center" />

            <!-- Right divider -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/tour_option" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_add_ons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>

</com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>
