<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activites.wallet.RedeemActivity">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:blurOverlayColor="@color/white_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/closeBtn"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:src="@drawable/icon_close_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:orientation="vertical"
                    app:corner_radius="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/dark_black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="1">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iconImg"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:src="@drawable/icon_font"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/iconImg"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tvTitle"
                                    style="@style/txt13SemiBoldWhite"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Gonpachi" />

                                <TextView
                                    android:id="@+id/tvAddress"
                                    style="@style/venueAddressHeaderStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="dubai"
                                    android:textColor="@color/white_2" />

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                            android:id="@+id/roundLinear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@color/brand_pink"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:bottom_left_corner_radius="@dimen/_7sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:top_right_corner_radius="@dimen/_12sdp">


                            <TextView
                                android:id="@+id/tvPrice"
                                style="@style/txt12Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:paddingHorizontal="@dimen/_11sdp"
                                android:paddingVertical="@dimen/_1sdp"
                                android:text="15%" />


                        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutBrunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/black"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:background="@color/redeem_header"
                            android:orientation="vertical"
                            app:corner_radius="@dimen/_10sdp">

                            <LinearLayout
                                android:id="@id/layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtOfferName"
                                    style="@style/txt12SemiBold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:text="Test123" />

                                <TextView
                                    android:id="@+id/tvDescription"
                                    style="@style/txt9Regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:maxLines="2"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:text="AI Habtoor City Boulevard - Sheikh Zayed Rd "
                                    android:textColor="@color/grey" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/feed_shadow"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:layout_marginVertical="@dimen/_12sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:gravity="center"


                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtPackageName"
                                            style="@style/txt11SemiBold"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:maxLines="1"
                                            android:text="test" />


                                        <TextView
                                            android:id="@+id/tvPackageDescription"
                                            style="@style/txt9Regular"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="AI Habtoor City Boulevard - Sheikh Zayed Rd "

                                           android:layout_marginTop="@dimen/_5sdp"
                                            android:textColor="@color/white" />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:orientation="horizontal">

                                            <TextView
                                                style="@style/txt10Regular"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="left quantity :" />

                                            <TextView
                                                android:id="@+id/tvRemainingQty"
                                                style="@style/txt9Regular"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_5sdp" />
                                        </LinearLayout>


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:gravity="end"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/ivMinus"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:background="@drawable/icon_minus" />

                                        <TextView
                                            android:id="@+id/tvQty"
                                            style="@style/txt11Regular"
                                            android:layout_width="@dimen/_25sdp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:paddingHorizontal="@dimen/_5sdp"
                                            android:text="0"
                                            android:textColor="@color/venue_text" />

                                        <ImageView
                                            android:id="@+id/ivPlus"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:src="@drawable/icon_plus" />

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>


                        <com.chaos.view.PinView
                            android:id="@+id/pinView"
                            style="@style/txt5SemiBoldWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:cursorVisible="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:inputType="numberPassword"
                            android:itemBackground="@color/light_grey_2"
                            app:hideLineWhenFilled="true"
                            app:itemCount="4"
                            app:itemHeight="@dimen/_36sdp"
                            app:itemRadius="10dp"
                            app:itemSpacing="@dimen/_8sdp"
                            app:itemWidth="@dimen/_35sdp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineColor="#3F3F3F"
                            app:lineWidth="@dimen/_1sdp" />

                        <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout
                            android:id="@+id/redeemNowButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:background="@drawable/dark_pink_btn_bg"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_13sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:weightSum="2"
                            app:corner_radius="@dimen/_5sdp">

                            <TextView
                                style="@style/txt12SemiBoldWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Redeem Now"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

                        <TextView
                            style="@style/txt11Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_40sdp"
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:gravity="center"
                            android:text="Please ask one of the staff for the promo code"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/txtNoBrunchData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/black"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            style="@style/txt16SemiBoldWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_100sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="No offer available"
                            android:textColor="@color/white_2" />

                    </LinearLayout>

                </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerLinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </eightbitlab.com.blurview.BlurView>

</androidx.constraintlayout.widget.ConstraintLayout>