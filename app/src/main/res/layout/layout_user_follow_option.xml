<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/optionContainer"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_26sdp"
    android:maxWidth="@dimen/_100sdp"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/btnChat"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_5sdp"
        app:tint="@color/white"
        android:src="@drawable/chat_unselect" />

    <ImageView
        android:id="@+id/btnMenu"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_26sdp"
        android:scaleType="center"
        android:src="@drawable/icon_category_menu"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_15sdp" />

    <com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout
        android:id="@+id/followButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/contact_follow_btn_bg">

        <TextView
            android:id="@+id/txtFollowButton"
            style="@style/txt10Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Requested"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/progressView"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:indeterminateTint="@color/brand_pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

    </com.whosin.app.comman.ui.roundcornerlayout.RoundCornerConstraintLayout>

</LinearLayout>
