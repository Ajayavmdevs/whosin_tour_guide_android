<!--                    android:rotation="90"-->
<!--                    app:tint="@color/white_70"/>-->

<!--            </LinearLayout>-->

            <!-- Security Note -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bank_field_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:backgroundTint="@color/white_10"> 
                <!-- Making it look slightly different as per image (darker) -->

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/stripe_ic_lock"
                    app:tint="@color/white_70"/>

                <TextView
                    style="@style/txt10RegularWhite70"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Your bank details are encrypted and used only for payouts." />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>