<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".ui.activites.auth.AuthUserEmailActivity">

    <com.whosin.app.ui.controller.NavBarWithBack
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftImage="@drawable/icon_next"
        app:navBgColor="@color/transparent"
        app:navTitleColor="@color/white"
        app:rightBtnTitle="Clear"
        app:showBackButton="true" />

    <com.whosin.app.ui.controller.OnBoardTextInfoView
        android:id="@+id/nameControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navbar"
        app:mainTitle="Hello John,\nWhatâ€™s your email\n address?"
        app:subTitle="Please add your email to unlock access \n to many features" />

    <EditText
        android:id="@+id/editEmail"
        style="@style/MyEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:hint="@string/edtEmail"
        android:nextFocusForward="@+id/editLastName"
        android:singleLine="true"
        app:layout_constraintDimensionRatio="h,381:49"
        app:layout_constraintTop_toBottomOf="@id/nameControl"
        android:autofillHints="name"
        android:inputType="textEmailAddress" />


    <com.whosin.app.ui.controller.RoundButton
        android:id="@+id/imageNext"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_55sdp"
        app:centerImg="@drawable/icon_next"
        app:imgMargin="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>